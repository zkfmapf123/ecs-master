pipeline {
    agent any

    env {
        BRANCH = env.GIT_BRANCH.tokenize('/')[-1]
    }

    stages {
        stage("what is git branch") {
            steps {
                echo env.BRANCH
            }
        }

        stage("build image"){
            steps {
                script {
                    if (env.BRANCH == "frontend") {
                        echo "===== frontend ==== "
                    }else if(env.BRANCH == "backend"){
                        echo "===== backend ==== "
                    }else{
                        sh exit 0
                    }
                }
            }
        }
    }
}