pipeline {
    agent any

    stages {

        stage("build image"){
            steps {
                script {
                    def BRANCH = env.GIT_BRANCH.tokenize('/')[-1]

                    if (BRANCH == "frontend") {
                        echo "===== frontend ==== "
                    }else if(BRANCH == "backend"){
                        echo "===== backend ==== "
                    }else{
                        
                        sh exit 0
                    }
                }
            }
        }
    }
}